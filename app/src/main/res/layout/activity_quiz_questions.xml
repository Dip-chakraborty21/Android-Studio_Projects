<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.momoui.quizapp.QuizViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".QuizQuestionsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="32dp"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.currentQuestion.questionText}" />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:imageResource="@{viewModel.currentQuestion.image}"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/quiz_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="@{viewModel.totalQuestions}"
                    android:progress="@{viewModel.progressValue}"
                    android:minHeight="50dp"
                    android:indeterminate="false"
                    android:layout_marginEnd="16dp"
                    android:progressTint="@color/purple_700"
                    android:progressBackgroundTint="@color/purple_200"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.progressText}" />
            </LinearLayout>

            <TextView
                android:id="@+id/optionOne"
                style="@style/toggleButton"
                android:text="@{viewModel.currentQuestion.alternatives[0]}" />

            <TextView
                android:id="@+id/optionTwo"
                style="@style/toggleButton"
                android:text="@{viewModel.currentQuestion.alternatives[1]}" />

            <TextView
                android:id="@+id/optionThree"
                style="@style/toggleButton"
                android:text="@{viewModel.currentQuestion.alternatives[2]}" />

            <TextView
                android:id="@+id/optionFour"
                style="@style/toggleButton"
                android:text="@{viewModel.currentQuestion.alternatives[3]}" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="@{viewModel.submitButtonText}"
                android:onClick="@{() -> viewModel.onSubmitClick()}" />
        </LinearLayout>
    </ScrollView>
</layout>
